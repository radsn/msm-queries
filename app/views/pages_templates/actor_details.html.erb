<h1>
  Actor #<%= @actor.id %> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @actor.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @actor.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @actor.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_characters.each do |the_character| %>
  <% character_movie = Movie.where({ :id => the_character.movie_id }).first %>
  <tr>
    <td>
      <%= character_movie.title %>
    </td>

    <td>
      <%= character_movie.year %>
    </td>

    <td>
      <%= Director.where({ :id => character_movie.director_id }).first.name %>
    </td>

    <td>
      <%= the_character.name %>
    </td>

    <td>
      <a href="/movies/<%= character_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
